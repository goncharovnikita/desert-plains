[head
   [title "Desert plains test page"]

   [style
        [body
            margin: 0;
            padding: 0;
            font-family: Helvetica Neue;
            box-sizing: border-box;
            --tertiary-color: #1e5f74;
        ]

        [.theme-dark
            color: #fcdab7;
            background-color: #1d2d50;
        ]

        [.container
            margin: 0 auto;
            display: flex;
            align-items: center;
            flex-direction: column;
            margin-top: 2em;
            height: 100vh;
        ]
        
        [.title
            font-size: 3em;
            margin: 0 3em;
            text-align: center;
        ]

        [.link
            color: inherit;
        ]

        [.content
            margin: 2em 0;
            flex-grow: 1;
        ]

        [.btn
            padding: 0.4em 0.8em;
            background-color: var(--tertiary-color);
            border: none;
            border-radius: 0.4em;
            color: inherit;
            font-size: 1.3rem;
        ]

        [.component-demo
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-column-gap: 1em;
            align-items: center;
        ]

        [.footer
            margin: 3em auto;
        ]
   ]
]

[body.theme-dark
    [div.container.main
        "Hello there, in body!"
        [h1.title "This page rendered by Desert Plains in React!"]
        [div.content
            [h1.title "Hello, world!"]
        ]
        [div.footer
            [a.link href="/about"
                "About"
            ]
        ]
    ]
]